@model IEnumerable<CoffeeShop.Models.Cliente>
@{
    ViewData["Title"] = "Clientes";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4 text-brown">Nossos Clientes</h1>
        <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
            <i class="fas fa-user-plus"></i> Novo Cliente
        </a>
    </div>

    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm hover-card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-user-circle text-primary me-2"></i>
                                @item.Nome
                            </h5>
                            <span class="badge @(item.Ativo ? "bg-success" : "bg-danger")">
                                @(item.Ativo ? "Ativo" : "Inativo")
                            </span>
                        </div>

                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <i class="fas fa-id-card text-muted me-2"></i> @item.CPF
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-envelope text-muted me-2"></i> @item.Email
                            </li>
                            <li class="mb-3">
                                <i class="fas fa-phone text-muted me-2"></i> @item.Telefone
                            </li>
                        </ul>

                        <div class="d-flex gap-2 mt-3">
                            <a asp-action="Edit" asp-route-id="@item.Id"
                               class="btn btn-outline-primary btn-sm flex-fill">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id"
                               class="btn btn-outline-info btn-sm flex-fill">
                                <i class="fas fa-info-circle"></i> Detalhes
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id"
                               class="btn btn-outline-danger btn-sm flex-fill"
                               onclick="return confirm('Tem certeza que deseja deletar este cliente?');">
                                <i class="fas fa-trash"></i> Deletar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .text-brown {
        color: #6F4E37;
    }

    .hover-card {
        transition: transform 0.2s ease-in-out;
    }

        .hover-card:hover {
            transform: translateY(-5px);
        }

    .btn-primary {
        background-color: #6F4E37;
        border-color: #6F4E37;
    }

        .btn-primary:hover {
            background-color: #5D4037;
            border-color: #5D4037;
        }

    .text-primary {
        color: #6F4E37 !important;
    }

    .list-unstyled li {
        display: flex;
        align-items: center;
    }
</style>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
}